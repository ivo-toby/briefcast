{
  "name": "briefcast",
  "version": "1.0.0",
  "private": true,
  "description": "Email-to-podcast conversion service with sectioned audio and normalization",
  "type": "module",
  "workspaces": [
    "shared",
    "processor",
    "workers/email-worker"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:processor": "npm run build -w processor",
    "build:worker": "npm run build -w workers/email-worker",
    "build:shared": "npm run build -w shared",
    "dev": "npm run dev -w workers/email-worker",
    "deploy": "npm run deploy -w workers/email-worker",
    "docker:build": "npm run docker:build -w processor",
    "docker:run": "npm run docker:run -w processor",
    "test": "npm run test --workspaces --if-present",
    "test:processor": "npm run test -w processor",
    "test:shared": "npm run test -w shared",
    "lint": "eslint .",
    "format": "prettier --write .",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "clean": "rm -rf node_modules/.cache && npm run clean --workspaces --if-present"
  },
  "keywords": [
    "email",
    "podcast",
    "rss",
    "cloudflare-workers",
    "audio-processing",
    "ffmpeg"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
