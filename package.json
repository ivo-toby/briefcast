  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250101.0",
    "@cloudflare/vitest-pool-workers": "^0.9.0",
    "@types/js-yaml": "^4.0.9",
    "typescript": "^5.3.0",
    "wrangler": "^3.100.0",
    "vitest": "^2.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
