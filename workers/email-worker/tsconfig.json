{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "bundler",
    "types": ["@cloudflare/workers-types"],
    "noEmit": true,
    "composite": false,
    "baseUrl": ".",
    "paths": {
      "@briefcast/shared": ["../../shared"],
      "@briefcast/shared/*": ["../../shared/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".wrangler",
    "**/*.test.ts",
    "**/__tests__/**"
  ]
}
