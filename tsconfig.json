{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "types": ["@cloudflare/workers-types"],
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".wrangler",
    "shared",
    "processor",
    "workers"
  ],
  "references": [
    { "path": "./shared" },
    { "path": "./processor" },
    { "path": "./workers/email-worker" }
  ]
}
