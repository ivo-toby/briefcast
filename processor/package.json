{
  "name": "@briefcast/processor",
  "version": "1.0.0",
  "private": true,
  "description": "Docker-based podcast processor with FFmpeg audio normalization",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "docker:build": "docker build -t briefcast-processor .",
    "docker:run": "docker-compose run --rm processor",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@briefcast/shared": "workspace:*",
    "@aws-sdk/client-s3": "^3.500.0",
    "postal-mime": "^2.6.1",
    "podcast": "^2.0.1",
    "js-yaml": "^4.1.0",
    "zod": "^3.22.0",
    "js-tiktoken": "^1.0.15",
    "dotenv": "^16.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/js-yaml": "^4.0.9",
    "typescript": "^5.3.0",
    "tsx": "^4.7.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
