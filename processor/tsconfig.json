{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@briefcast/shared": ["../shared"],
      "@briefcast/shared/*": ["../shared/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/__tests__/**"
  ],
  "references": [
    { "path": "../shared" }
  ]
}
