# Briefcast Processor Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# API Keys (Required)
# =============================================================================

# Anthropic Claude API key for script generation
ANTHROPIC_API_KEY=sk-ant-api...

# OpenAI API key for TTS generation
OPENAI_API_KEY=sk-...

# =============================================================================
# Cloudflare R2 Configuration (Required)
# =============================================================================

# Cloudflare account ID (found in dashboard URL)
R2_ACCOUNT_ID=

# R2 API token with read/write permissions
# Create at: https://dash.cloudflare.com/profile/api-tokens
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=

# R2 bucket name
R2_BUCKET_NAME=briefcast-podcast

# Public URL for the R2 bucket (for RSS feed links)
# If using custom domain: https://podcast.yourdomain.com
# If using R2 public URL: https://pub-xxx.r2.dev
R2_PUBLIC_URL=https://podcast.yourdomain.com

# =============================================================================
# Cloudflare KV Configuration (Required - for email storage)
# =============================================================================

# KV namespace ID (found in Workers & Pages > KV > your namespace)
CF_KV_NAMESPACE_ID=

# Cloudflare API token with Workers KV read/write permissions
# Create at: https://dash.cloudflare.com/profile/api-tokens
# Required permissions: Account > Workers KV Storage > Edit
CF_API_TOKEN=

# =============================================================================
# Optional Configuration
# =============================================================================

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Temporary directory for audio processing
TEMP_DIR=/tmp/briefcast

# Processing timeout in seconds (default: 900 = 15 minutes)
PROCESSING_TIMEOUT=900
